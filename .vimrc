set nocompatible
set number
set hlsearch

set ruler

" Tabs, etc.
set tabstop=4
set softtabstop=4
set shiftwidth=4
set smartindent
set autoindent
set smarttab

" Syntax highlighting
syntax on
filetype plugin indent on

set foldenable

" Persistent undo
set undofile
set undolevels=10000
set undoreload=10000
set undodir=~/.vim/undo


" Appearance
set background=dark
colorscheme solarized
set pastetoggle=<F10>

